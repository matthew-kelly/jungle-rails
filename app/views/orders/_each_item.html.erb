<% if product = Product.find_by(id: order.product_id) %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      $<%= order.item_price_cents / 100.00 %>
    </td>
    <td>
      <%= order.quantity %>
    </td>
    <td>
      $<%= order.total_price_cents / 100.00 %>
    </td>
  </tr>
<% end %>
